<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/donation_request_item_swlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@null"
        app:dragEdge="left"
        app:mode="normal">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="left"
                >

                <ImageButton
                    android:id="@+id/donation_request_item_edit_floating_btn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/circle_style2"
                    android:elevation="7dp"
                    app:srcCompat="@drawable/ic_edit_black_24dp" />
                <ImageButton
                    android:id="@+id/donation_request_item_phone_floating_btn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/circle_style"
                    android:elevation="7dp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_phone_black_24dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Your main layout here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/shape2"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/donation_request_item_blood_type_txt"
                app:layout_constraintTop_toTopOf="parent"
               >
                <TextView
                    android:id="@+id/donation_request_item_donation_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmkjkgkfj"
                    android:textColor="@color/color1"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    />
                <TextView
                    android:id="@+id/donation_request_item_hospital_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmkjkgkfj"
                    android:textColor="@color/color1"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    />
                <TextView
                    android:id="@+id/donation_request_item_city_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmkjkgkfj"
                    android:textColor="@color/color1"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/donation_request_item_blood_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_style2"
                android:text="B+"
                android:textColor="#fff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Your secondary layout here -->



    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</LinearLayout>