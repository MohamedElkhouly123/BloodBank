<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditText">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/color1</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:padding">@dimen/_6ssp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="TextView">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/_6ssp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DonorTextView2">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:textColor">@color/color1</item>
    </style>
    <style name="Button">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/searchlight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonRed">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/searchlightred</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardView.">
        <item name="cardCornerRadius">22dp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>


    </style>
    <style name="CardView2.">
        <item name="cardCornerRadius">22dp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/color2</item>

    </style>
    <style name="spinner_style">

        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:dropDownWidth">@dimen/_200sdp</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
<!--        <item name="android:textSize">@dimen/_15ssp</item>-->
        <!-- Color of text and icon when SELECTED -->
        <item name="tabSelectedTextColor">@color/color2</item>
        <item name="tabTextColor">@color/color2</item>
<!--        android:fillViewport="true"-->
<!--        app:tabBackground="@drawable/fixed_bottom_button"-->
<!--        app:tabIndicatorColor="@color/color_primary_text"-->
<!--        app:tabMode="fixed"-->
<!--        app:tabSelectedTextColor="@color/color_primary_text"-->
<!--        app:tabTextColor="@color/color_secondary_text"-->
    </style>

    <style name="MoreView">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">#99070707</item>
    </style>

    <style name="MoreText">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
